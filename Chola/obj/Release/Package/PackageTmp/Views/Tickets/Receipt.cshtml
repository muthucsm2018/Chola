@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Receipt</title>

    <style>
    .invoice-box{
        max-width:600px;
        margin:auto;
        padding:10px;
        font-size:12px;
        line-height:15px;
        font-family:'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
        color:#555;
    }

    .invoice-box table{
        width:100%;
        line-height:inherit;
        text-align:left;
    }

    .invoice-box table td{
        padding:5px;
        vertical-align:top;
    }

    .invoice-box table tr td:nth-child(2){
        text-align:right;
    }

    .invoice-box table tr.top table td{
        padding-bottom:20px;
    }

    .invoice-box table tr.top table td.title{
        font-size:15px;
        line-height:5px;
        color:#333;

    }

	.logo-center {
		text-align: center;
	}


    .invoice-box table tr.information table td{
        padding-bottom:10px;
    }

    .invoice-box table tr.heading td{
        background:#eee;
        border-bottom:1px solid #ddd;
        font-weight:bold;
    }

    .invoice-box table tr.details td{
        padding-bottom:2px;
    }

    .invoice-box table tr.item td{
        border-bottom:1px solid #eee;
    }

    .invoice-box table tr.item.last td{
        border-bottom:none;
    }

    .invoice-box table tr.total td:nth-child(2){
        border-top:2px solid #eee;
        font-weight:bold;
    }

    
    </style>
</head>
<body>
    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <td class="title logo-center">
                                <b>Chola Holidays</b>                                
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="information">
                <td colspan="2">
                    <table>
                        <tr>
                            <td colspan="2">
                                <b>Authorized Money Changer Tours & Travel</b><br>
                                BLK-640, ROWELL ROAD, #01-54<br>
                                Singapore - 200640.<br>
                                Tel: +65 6291 7747 | 9384 4565<br>
                                WhatsApp: +65 91137493<br>
                                info@cholaholidays.com | www.cholaholidays.com<br>
                                OCBC Currnet: 712 558428 001 | POSB Savings: 421 286710
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="heading">
                <td>
                    Visa Fee Receipt
                </td>

                <td>
                </td>
            </tr>

            <tr class="details">
                <td colspan="2" align="center">
                    <img src="@ViewBag.BarcodeImage" />
                </td>
            </tr>

            <tr class="details">
                <td>
                    Issue By :
                </td>

                <td>
                    @ViewBag.IssueBy
                </td>
            </tr>

            <tr class="details">
                <td>
                    Printed On :
                </td>

                <td>
                    @ViewBag.PrintedOn
                </td>
            </tr>

            <tr class="details">
                <td>
                    Applicant Name :
                </td>

                <td>
                    @ViewBag.ApplicantName
                </td>
            </tr>

            <tr class="details">
                <td>
                    Application Date :
                </td>

                <td>
                    @ViewBag.ApplicationDate
                </td>
            </tr>

            <tr class="details">
                <td>
                    Nationality :
                </td>

                <td>
                    @ViewBag.Nationality
                </td>
            </tr>

            <tr class="details">
                <td>
                    Passport No :
                </td>

                <td>
                    @ViewBag.PassportNo
                </td>
            </tr>

            <tr class="details">
                <td>
                    Phone :
                </td>

                <td>
                    @ViewBag.Phone
                </td>
            </tr>

            <tr class="details">
                <td>
                    Visa Type :
                </td>

                <td>
                    @ViewBag.VisaType
                </td>
            </tr>

            <tr class="details">
                <td>
                    Visa Fee :
                </td>

                <td>
                    @ViewBag.VisaFee
                </td>
            </tr>

            <tr class="details">
                <td>
                    Delivery Date :
                </td>

                <td>
                    @ViewBag.DeliveryDate
                </td>
            </tr>

            @*<tr class="details">
                <td colspan="2" align="center">
                    Collection Time: 2.00 PM to 3.45 PM (Monday to Friday Only)
                </td>
            </tr>
            <tr class="details">
                <td colspan="2" align="center">
                    To track the current status of your application, <br />
                    visit www.fCholaingapore.com
                </td>
            </tr>
            <tr class="details">
                <td colspan="2" align="center">
                    Cash paid is not refundable <br/> Original Receipt is required for collection</br>
                    Applicant must come in Person for Collection</br>
                    Thank you
                </td>
            </tr>*@

            <tr class="details">
                <td colspan="2" align="center">                   
                    Thank you!
                </td>
            </tr>
        </table>
    </div>
    <button type="button" id="printpagebutton" class="btn btn-primary btn-xs" onclick="myFunction()">Print</button>
   
    <script type="text/javascript">
        function myFunction() {
            //Get the print button and put it into a variable
            var printButton = document.getElementById("printpagebutton");
            //Set the print button visibility to 'hidden' 
            printButton.style.visibility = 'hidden';
            //Print the page content
            window.print()
            //Set the print button to 'visible' again 
            //[Delete this line if you want it to stay hidden after printing]
            printButton.style.visibility = 'visible';
        }
    </script>
</body>

</html>
