<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Chola</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/assets/css/css")
   
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->  

    @Scripts.Render("~/assetsjs")
    <!-- Datatable js -->
    @Scripts.Render("~/Datatablesjs")
    
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header" id="hide3">
            <!-- Logo -->
            <a href="@Url.Action("Index", "Home")" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">Chola</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Chola </b>SG</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                @Html.Partial("_LoginPartial")
            </nav>
        </header>
        
        <!-- =============================================== -->
       
        <!-- Left side column. contains the sidebar -->
            <aside class="main-sidebar" id="hide4">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar">
                    <!-- sidebar menu: : style can be found in sidebar.less -->
                    @{ Html.RenderAction("Menu", "Home"); }                 
                    
                </section>
                <!-- /.sidebar -->
            </aside>
        <!-- =============================================== -->
        
        <!-- Content Wrapper. Contains page content -->
        @RenderBody()
        <!-- /.content-wrapper -->
        <footer class="main-footer" id="footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.1
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year <a href="www.cholaholidays.com">Chola Holidays, Singapore</a>.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    @RenderSection("scripts", required: false)
</body>

</html>
