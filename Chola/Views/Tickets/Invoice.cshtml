    </table>
    <table width="100%" cellspacing="0">
        <tr>
            <td colspan="3" style="vertical-align: top; font-size: 20px;" align="center">
                <b>TAX INVOICE</b>
            </td>
        </tr>
        <tr>
            <td style="padding-bottom: 20px;" width="60%">To<br><b>@ViewBag.CustomerName</b></td>
            <td align="left" width="20%">Invoice No.<br>Date</td>
            <td align="left" width="20%">: <b>@ViewBag.InvoiceNo</b><br>: @ViewBag.InvoiceDate</td>
        </tr>
    </table>
    <table style="width:100%" cellspacing="0">
        <thead>
            <tr>
                <td width="5%" align="center" style="border-top: 1px #000 solid; border-bottom: 1px #000 solid; padding: 10px 10px 10px 0;"><b>SI.No</b></td>
                <td width="30%" style="border-top: 1px #000 solid; border-bottom: 1px #000 solid; padding: 10px 0 10px 0;"><b>Name/Particular</b></td>
                <td width="25%" style="border-top: 1px #000 solid; border-bottom: 1px #000 solid; padding: 10px 0 10px 0;"><b>Description</b></td>
                <td width="30%" style="border-top: 1px #000 solid; border-bottom: 1px #000 solid; padding: 10px 0 10px 0;"><b>Pnr/Ticket Number</b></td>
                <td width="10%" align="right" style="border-top: 1px #000 solid; border-bottom: 1px #000 solid; padding: 10px 0 10px 0;"><b>Amount</b></td>
            </tr>
        </thead>

        <tbody style="height:100px;">
            @{int idx = 1;}
            @foreach (Chola.Models.TicketCustomersListModel mod in ViewBag.Customers)
            {
                <tr>
                    <td align="center">@idx</td>
                    <td>@mod.CustomerName</td>
                    <td>@Html.Raw(mod.Description)</td>
                    <td>@mod.Remarks</td>
                    <td align="right">$ @String.Format("{0:n}", mod.SellingPrice)</td>
                </tr>
                idx++;
            }

        </tbody>
        <tfoot>
            <tr>
                <td style="vertical-align: bottom; padding-bottom: 20px;" colspan="2">SGD @ViewBag.AmountinWords Only</td>
                <td style="vertical-align: bottom; padding-bottom: 20px;" align="right">Gross.Total</td>
                <td align="right" style="padding-bottom: 20px; vertical-align: bottom; line-height: 22px; font-size: 20px; font-weight: 700;border-top: 1px #000 solid;">$ @String.Format("{0:n}", ViewBag.Amount)</td>
            </tr>
        </tfoot>
    </table>

