    <table width="100%" cellspacing="0">
        <tr>
            <td width="30%">
                <img src="@Url.Content("~/AppImages/logo.png")" width="450px;" />
            </td>
            <td width="80%" align="right">
                <h2 style="font-size: 22px;">CHOLA HOLIDAYS PTE LTD</h2>
